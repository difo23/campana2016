<p id="notice"><%= notice %></p>

<h1>Listing Recintos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre recinto</th>
      <th>Codigo recinto</th>
      <th>Nombre encargado recinto</th>
      <th>Email encargado recinto</th>
      <th>Celular encargado recinto</th>
      <th>Cedula encargado recinto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recintos.each do |recinto| %>
      <tr>
        <td><%= recinto.nombre_recinto %></td>
        <td><%= recinto.codigo_recinto %></td>
        <td><%= recinto.nombre_encargado_recinto %></td>
        <td><%= recinto.email_encargado_recinto %></td>
        <td><%= recinto.celular_encargado_recinto %></td>
        <td><%= recinto.cedula_encargado_recinto %></td>
        <td><%= link_to 'Show', recinto %></td>
        <td><%= link_to 'Edit', edit_recinto_path(recinto) %></td>
        <td><%= link_to 'Destroy', recinto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

